<Window x:Class="AIConsumptionTracker.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="450" Width="500"
        MinWidth="400" MinHeight="300"
        WindowStyle="None" ResizeMode="CanResize"
        Background="#1E1E1E" Foreground="White"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="50" 
                      ResizeBorderThickness="5" 
                      GlassFrameThickness="0" 
                      CornerRadius="8" />
    </WindowChrome.WindowChrome>
    
    <Border BorderBrush="#333333" BorderThickness="1" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Background="#252526" Padding="15" CornerRadius="8,8,0,0">
                <TextBlock Text="Provider Settings" FontSize="18" FontWeight="Bold"/>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" Padding="20">
                <StackPanel x:Name="SettingsStack">
                    <!-- Dynamic fields will be added here -->
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#252526" Padding="15" CornerRadius="0,0,8,8">
                <DockPanel>
                    <Button Content="Scan for Keys" Width="100" Click="ScanBtn_Click" Height="30" Background="#333333" DockPanel.Dock="Left" HorizontalAlignment="Left"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Save" Width="80" Margin="0,0,10,0" Click="SaveBtn_Click" Height="30" Background="#007ACC"/>
                        <Button Content="Cancel" Width="80" Click="CancelBtn_Click" Height="30" Background="#444444"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </Grid>
    </Border>

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>


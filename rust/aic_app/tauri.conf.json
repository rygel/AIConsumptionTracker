{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "src"
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "2024 AI Consumption Tracker",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "Monitor your AI API usage across multiple providers",
    "shortDescription": "AI API Usage Tracker",
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "identifier": "com.aiconsumptiontracker.app",
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 500,
        "minHeight": 400,
        "resizable": true,
        "title": "AI Consumption Tracker",
        "width": 420,
        "minWidth": 350,
        "visible": true,
        "center": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false
      },
      {
        "label": "settings",
        "fullscreen": false,
        "height": 600,
        "minHeight": 500,
        "resizable": true,
        "title": "Settings - AI Consumption Tracker",
        "width": 700,
        "minWidth": 550,
        "visible": false,
        "center": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "parent": "main"
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": false,
      "tooltip": "AI Consumption Tracker",
      "title": "AI Tracker",
      "menu": [
        {
          "id": "show",
          "label": "Show Window",
          "accelerator": "CmdOrCtrl+S"
        },
        {
          "id": "refresh",
          "label": "Refresh",
          "accelerator": "CmdOrCtrl+R"
        },
        {
          "id": "separator",
          "type": "separator"
        },
        {
          "id": "quit",
          "label": "Quit",
          "accelerator": "CmdOrCtrl+Q"
        }
      ]
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "notification": {
      "active": true
    },
    "permissions": {
      "active": true,
      "resources": ["capabilities/main.json"]
    }
  }
}

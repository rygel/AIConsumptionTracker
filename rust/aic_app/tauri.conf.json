{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "src"
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "2024 AI Consumption Tracker",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "Monitor your AI API usage across multiple providers",
    "shortDescription": "AI API Usage Tracker",
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "identifier": "com.aiconsumptiontracker.app",
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 500,
        "minHeight": 400,
        "resizable": true,
        "title": "AI Consumption Tracker",
        "width": 420,
        "minWidth": 350,
        "visible": true,
        "center": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false
      }
    ],
    "withGlobalTauri": true
  },
  "plugins": {
    "permissions": {
      "active": true,
      "resources": ["capabilities/main.json"]
    }
  }
}
